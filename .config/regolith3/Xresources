! Wallpaper
regolith.wallpaper.file: ~/Pictures/Wallpapers/asian-dragon.jpg
regolith.wallpaper.options: scaled

! Gaps
wm.gaps.smart: off
wm.gaps.outer.size: 5
wm.gaps.inner.size: 10

! Window
wm.window.border.size: 2

! Program
wm.program.launcher.app: rofi -show drun -theme ~/.config/rofi/launchers/type-4/style-9.rasi
wm.program.launcher.window: rofi -show window -theme ~/.config/rofi/launchers/type-4/style-9.rasi
wm.program.launcher.cmd: rofi -show run -theme ~/.config/rofi/launchers/type-4/style-9.rasi
wm.program.file_search: rofi -show filebrowser -theme ~/.config/rofi/launchers/type-4/style-9.rasi

wm.bar.position: bottom
