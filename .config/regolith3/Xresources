regolith.lockscreen.wallpaper.file: wallpaper
regolith.lockscreen.wallpaper.options: scaled
regolith.wallpaper.file: wallpaper
regolith.wallpaper.options: scaled

! Gaps
wm.gaps.smart: off
wm.gaps.outer.size: 5
wm.gaps.inner.size: 10

! Bar
wm.bar.position: bottom

! Rofi
#define rofi_theme ~/.config/rofi/launchers/type-4/style-9.rasi

wm.program.launcher.app: rofi -show drun -theme rofi_theme
wm.program.launcher.window: rofi -show window -theme rofi_theme
wm.program.launcher.cmd: rofi -show run -theme rofi_theme
wm.program.file_search: rofi -show filebrowser -theme rofi_theme
